<h1>Pel√≠cula seleccionada</h1>
<div class="card mb-3 mt-7" style="max-width: 700px">
    <div class="row g-0">
        <div class="col-md-4">
            <img src={{image}} class="img-fluid" alt="portada pelicula">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <a href="/movies">Go Back</a>
                <h4 class="card-title">{{title}}</h4>

                <h5 class="card-title">{{director}}</h5>
                <h6>Stars</h6>
                <ul>
                    {{#each stars}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
                <p class="card-text">{{description}}</p>
                <p class="card-text">
                    <small>
                        {{#each showtimes}}
                        {{this}} ||
                        {{/each}}
                    </small>
                </p>
            </div>
        </div>
    </div>
</div>